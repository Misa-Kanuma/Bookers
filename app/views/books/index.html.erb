<h2>Books</h2>


<table>
<thead>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th></th>
	</tr>
</thead>
<tr>
	<% @books.each do |book| %>
<tbody>
	<td><%= book.title %></td>
	<td><%= book.body %></td>
	<td><%= link_to "Show", book_path(book.id) %></td>
	<td><%= link_to "Edit", edit_book_path(book.id) %></td>
	<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" =>"Are you sure?" %></td>
</tbody>
</tr>
<% end %>
</table>
<!-- form_for部分 -->
	<%= form_for(Book.new, url: '/books') do |f| %>

	<h4>New book</h4>

	<%= f.label :Title %><br>
	<%= f.text_field :title %><br>


	<%= f.label :Body %><br>
	<%= f.text_area :body %><br>

	<%= f.submit 'CreateBook' %>

<% end %>
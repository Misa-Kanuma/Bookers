<h2>Editing Book</h2>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
    <%= f.label :Title %><br>
    <%= f.text_field :title %><br>

	<%= f.label :Body %><br>
    <%= f.text_area :body %><br>

    <%= f.submit 'Update Book' %><br>

    <%= link_to "show", book_path(@book.id) %>
	<%= link_to "back", books_path %>

<% end %>
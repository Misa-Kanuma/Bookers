<h1>Books</h1>


<table>
<tr>
	<th><%= "Title" %></th>
	<th><%= "Body" %></th>
	<th><% "Show" %></th>
	<th><% "Edit" %></th>
	<th><% "Destroy" %></th>
</tr>
	<% @lists.each do |list| %>
<tr>
	<td><%= list.title %></td>
	<td><%= list.body %></td>
	<td><%= link_to "Show", todolist_path(@list.id) %></td>
	<td><<%= link_to "Edit", edit_todolist_path(@list.id) %></td>
	<td><%= link_to "Destroy", destroy_todolist(@list.id), method: :delete, "data-confirm" =>"Are you sure?" %></td>
</tr>
<% end %>